{# Columns template #}

{% extends "topbar.j2" %}

{% block basecss %}
{{ super() }}
<link href="{{ media_url('css/columns.css') }}" rel="stylesheet">
{% endblock basecss %}


{% block content %}



<div class="row-fluid">
	
  <div class="span10">
	  {% block header %}
		<div class="hero-unit">
		  <h1>
		    {% block page_title %}{{ resource.meta.title }}{% endblock %}
		    {% if resource.meta.subtitle %}<small>{% block page_subtitle %}{{ resource.meta.subtitle }}{% endblock %}</small>{% endif %}
		  </h1>
		</div>
	  {% endblock header %}
	
      {% filter markdown -%}
      {% block main %}{% endblock %}
      {%- endfilter %}
  </div>
  <div class="span2">
		<div class="well sidebar-nav">
    	{% block sidebar %}{% endblock %}
		</div>
  </div>
</div>

{% endblock content %}



